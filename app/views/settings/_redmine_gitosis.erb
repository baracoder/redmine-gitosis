<%= '<div class="tabular settings">'.html_safe %>
	<%= '<p>'.html_safe %>
		<%= '<label> '.html_safe %> <%= l(:label_gitosis_url)%> <%= '</label> '.html_safe %>
		<%= text_field_tag("settings[gitosisUrl]", @settings['gitosisUrl'], :size => 60) %>
		<%= '<br />'.html_safe %>
	<%= '</p>'.html_safe %>
	<%= '<p>'.html_safe %>
		<%= '<label> '.html_safe %> <%= l(:label_gitosis_identity_file)%> <%= '</label>'.html_safe %>
		<%= text_field_tag("settings[gitosisIdentityFile]", @settings['gitosisIdentityFile'], :size => 60) %>
		<%= '<br />'.html_safe %>
	<%= '</p>'.html_safe %>
	<%= '<p>'.html_safe %>
		<%= '<label>'.html_safe %> <%= l(:label_base_path)%> <%= '</label>'.html_safe %>
		<%= text_field_tag("settings[basePath]", @settings['basePath'], :size => 60) %>
		<%= '<br />'.html_safe %>
	<%= '</p>'.html_safe %>
	<%= '<p>'.html_safe %>
		<%= '<label>'.html_safe %> <%= l(:label_developer_base_urls)%> <%= '</label>'.html_safe %>
		<%= text_area_tag("settings[developerBaseUrls]", @settings['developerBaseUrls'].split(/[\r\n\t ,;]+/).join("\n"), :size => 60) %>
		<%= '<br />'.html_safe %>
	<%= '</p>'.html_safe %>
	<%= '<p>'.html_safe %>
		<%= '<label>'.html_safe %> <%= l(:label_read_only_base_urls)%> <%= '</label>'.html_safe %>
		<%= text_area_tag("settings[readOnlyBaseUrls]", @settings['readOnlyBaseUrls'].split(/[\r\n\t ,;]+/).join("\n"), :size => 60) %>
		<%= '<br />'.html_safe %>
	<%= '</p>'.html_safe %>
<%= '</div> '.html_safe %>
